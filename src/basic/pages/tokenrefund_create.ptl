Form(){
    Div(row){
        Div(col-sm-3 text-right mt-sm){
            Label(For: Amount){
                LangRes(@1amount)
            }
        }
        Div(col-sm-9){
            Input(Name: Amount, Type: number)
        }
    }
    Div(row mt-sm){
        Div(col-sm-3 text-right mt-sm){
            Label(For: VictimAccount){
                LangRes(@1tokens_refund_victim)
            }
        }
        Div(col-sm-9){
            Input(Name: VictimAccount, Placeholder: $@1wallet_address$)
        }
    }
    Div(row mt-sm){
        Div(col-sm-3 text-right mt-sm){
            Label(For: SuspectAccount){
                LangRes(@1tokens_refund_attacker)
            }
        }
        Div(col-sm-9){
            Input(Name: SuspectAccount, Placeholder: $@1wallet_address$)
        }
    }
    Div(row mt-sm){
        Div(col-sm-3 text-right mt-sm){
            Label(For: Note){
                LangRes(@1description)
            }
        }
        Div(col-sm-9){
            Input(Name: Note, Type: textarea)
        }
    }
    Button(Body: $@1request_refund$, Contract: @1VotingRunTokenRefund, Page: @1tokenrefund_list, Class: btn pull-right btn-primary mt)
    Button(Body: LangRes(@1back), Class: btn pull-right btn-default mt, Page: @1tokenrefund_list)
}