contract RolesRequestDecision {
    data {
        decision int
        notific_id int
        rid int "optional"
        Address string "optional"
    }

    conditions {
    }

    action {
        if ($decision == 1){
            @1RolesAssign("rid,Address", $rid, $Address)
        }

        if ($notific_id > 0){
            @1NotificationsClose("notific_id", $notific_id)
        }
    }
}