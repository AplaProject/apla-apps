contract RolesRequestDecision {
    data {
        Decision int
        NotificId int
        Rid int "optional"
        MemberId string "optional"
    }

    conditions {}

    action {
        if $Decision == 1 {
            @1RolesAssign("Rid,MemberId", $Rid, $MemberId)
        }

        if $NotificId > 0 {
            @1NotificationsClose("NotificId", $NotificId)
        }
    }
}