contract RoleConditions {
    data {
        role string
    }

    conditions {
        if !DBFind("@1roles_participants").Where({"ecosystem": $ecosystem_id, "role->name": $role, "member->member_id": $key_id, "deleted": 0}).Row() {
            warning Sprintf(LangRes("@1x_role_only_action", "en"), $role)
        }
    }
}