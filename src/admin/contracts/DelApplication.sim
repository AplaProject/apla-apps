contract DelApplication {
	data {
		ApplicationId int
		Value int "optional"
	}
    
	conditions {
		if $Value < 0 || $Value > 1 {
			error "Incorrect value"
		}
		RowConditions("applications", $ApplicationId, false)
	}
    
	action {
		DBUpdate("@1applications", $ApplicationId, {"deleted": $Value})
	}
}