contract SelectApp {
    data {
        ApplicationId int
    }

    conditions {
        $key_address = IdToAddress($key_id)
        $app = DBFind("@1applications").Columns("id,name").Where({"id": $ApplicationId, "ecosystem": $ecosystem_id}).Row()
        if !$app{
            LangRes("@1app_not_found", "en")
        }
    }

    action {
        var value map bufferId int
        value["app_id"] = Str($ApplicationId)
        value["app_name"] = $app["name"]

        bufferId = Int(DBFind("@1buffer_data").Where({"address": $key_address, "key": "export", "ecosystem": $ecosystem_id}).One("id"))
        if bufferId >0 {
            DBUpdate("@1buffer_data", bufferId, {"value": value})
        } else {
            DBInsert("@1buffer_data", {"address": $key_address, "key": "export","value": value, ecosystem: $ecosystem_id})
        }
    }
}