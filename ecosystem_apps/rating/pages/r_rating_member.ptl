SetVar(this_page, r_rating_member).(this_table, r_ratings).(back_page, r_ratings)
DBFind(@1applications).Where({ecosystem:#ecosystem_id#, name:"Ratings"}).Columns("name,id").Vars(application)
AppParam(App: #application_id#, Name:r_types, Source:types, Ecosystem:#ecosystem_id#)

SetVar(isManager,0)
SetVar(admin_role_id, EcosysParam(Name:role_admin))
If(#role_id#>0){
    If(#admin_role_id#==#role_id#){
        SetVar(isManager,1)
    }
}

Form(){
    If(#isManager#==1){
        Div(row){
            Div(col-sm-4 mt-sm text-bold text-right){
                LangRes(r_member)
            }
            Div(col-sm-8 text-left){
                Div(input-group){
                    If(GetVar(MemberId)!=""){
                        SetVar(Member, Address(#MemberId#))
                        Input(Name: Member, Disabled: 1, Value: #Member#)
                    }.Else{
                        Input(Name: Member, Disabled: 1, Value: "xxxx-xxxx-xxxx-xxxx-xxxx")
                    }
                    Div(input-group-btn){
                        Button(Class: btn bg-gray-lighter fa fa-caret-down buttons, Page: @1select_wallet, PageParams:"back_page=#this_page#,back_header=$@1send$,EcosystemId=#ecosystem_id#,Id=#Id#").Popup(Header: $@1member$, Width: "50")
                    }
                }
            }
        }
        If(GetVar(MemberId)!=""){
            Div(row mt-sm){
                Div(col-sm-4 mt-sm text-right text-bold){
                    LangRes(r_amount)
                }
                Div(col-sm-8 text-left){
                    Input(Name: Amount, Type: number)
                }
            }
            DBFind(e_events, events).Limit(10).Order("created_at").Columns("name,id")
            Div(row mt-sm){
                Div(col-sm-4 mt-sm text-right text-bold){
                    Label($r_last_events$)
                }
                Div(col-sm-8 mt-sm text-left){
                    Input(Name: LastEvent, Type: "checkbox", Value: "true", Class: m0 ml-sm)
                }
            }
            Div(row mt-sm){
                Div(col-sm-4 mt-sm text-right text-bold){
                    LangRes(r_event)
                }
                Div(col-sm-8 text-left){
                    Select(Name: EventId, Source: events, NameColumn: name, ValueColumn: id)
                }
            }.Hide(LastEvent=false)

            Div(row mt-sm){
                Div(col-sm-4 mt-sm text-right text-bold){
                    LangRes(r_event_type)
                }
                Div(col-sm-8 text-left){
                    Select(Name: EventType, Source: types, NameColumn: name, ValueColumn: id)
                }
            }.Hide(LastEvent=true)
            Div(row mt-sm){
                Div(col-sm-4 mt-sm text-right text-bold){
                    LangRes(r_event_id)
                }
                Div(col-sm-8 text-left){
                    Input(Name: EventId, Type: number)
                }
            }.Hide(LastEvent=true)
            Button(Body: $@1send$, Class: btn btn-primary pull-right mt, Page: #back_page#, Contract: RUpdate)
        }
    }
    Button(Body: $@1back$, Class: btn btn-default pull-right mt, Page: #back_page#)
}.Style(
    .buttons {
        border: 1px solid #dde6e9;
        padding: 6px 16px;
    }
)