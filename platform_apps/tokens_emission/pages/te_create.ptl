        Div(row mt-sm){
            Div(col-md-3 mt-sm text-right){
                Label(){
                    LangRes(@1token_title)
                    Span(Class: text-danger, Body:*)
                }
            }
            Div(col-md-9 text-left){
                Input(Name: Title)
            }
        }
        Div(row mt-sm){
            Div(col-md-3 mt-sm text-right){
                Label(){
                    LangRes(@1type_emission)
                    Span(Class: text-danger, Body:*)
